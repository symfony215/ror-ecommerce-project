{% extends 'adminbase.html.twig' %}

{% block title %}Category Home Page{% endblock %}

{% block body %}


<section role="main" class="content-body">
    <header class="page-header">
        <h2>Category List Page</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Category List</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <div class="col-sm-2">
        <a href="{{ path('admin_category_new') }}"class="btn btn-block btn-success">Create New</a>
    </div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Image</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.parentid }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.keywords }}</td>
                    <td>{{ category.image }}</td>
                    <td>{{ category.status }}</td>
                    <td>
                        <a href="{{ path('admin_category_show', {'id': category.id}) }}"class="btn btn-block btn-info">Show</a>

                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}"class="btn btn-block btn-info">Edit</a>
                        {{ include('admin/category/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <!-- start: page -->
    <!-- end: page -->
</section>

{% endblock %}
