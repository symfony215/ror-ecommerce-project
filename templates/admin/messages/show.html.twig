{% extends 'adminbase.html.twig' %}
{% block title %}Messages{% endblock %}

{% block body %}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Messages Page</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/admin">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Show Messages</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ message.ip }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ message.note }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col md-2">
        <a href="{{ path('admin_messages_index') }}"class="mb-xs mt-xs mr-xs btn btn-success">back to list</a>
    </div>
    <div class="col md-2">
        <a href="{{ path('admin_messages_edit',{'id': message.id}) }}"class="mb-xs mt-xs mr-xs btn btn-success">Edit</a>
    </div>

    </div>
    <div class="col-sm-2">
        {{ include('admin/messages/_delete_form.html.twig') }}
    </div>


    <!-- start: page -->
    <!-- end: page -->
</section>

{% endblock %}
