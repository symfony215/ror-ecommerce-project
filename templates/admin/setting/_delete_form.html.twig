<form method="post" action="{{ path('admin_setting_delete', {'id': setting.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ setting.id) }}">
    <div class="col mb-2">
        <br><button class="btn btn-danger">Delete</button>
    </div>
</form>
