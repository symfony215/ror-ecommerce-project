{% extends 'adminbase.html.twig' %}

{% block title %}Setting index{% endblock %}

{% block body %}

    <section role="main" class="content-body">
        <header class="page-header">
            <h2>Setting index</h2>

            <div class="right-wrapper pull-right">
                <ol class="breadcrumbs">
                    <li>
                        <a href="/admin">
                            <i class="fa fa-home"></i>
                        </a>
                    </li>
                    <li><span>Setting index</span></li>
                </ol>

                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
            </div>
        </header>



        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Brand</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for setting in settings %}
                <tr>
                    <td>{{ setting.id }}</td>
                    <td>{{ setting.title }}</td>
                    <td>{{ setting.brand }}</td>
                    <td>{{ setting.status }}</td>
                    <td>
                        <a href="{{ path('admin_setting_show', {'id': setting.id}) }}"class="mb-xs mt-xs mr-xs btn btn-primary">Show</a>

                        <a href="{{ path('admin_setting_edit', {'id': setting.id}) }}"class="mb-xs mt-xs mr-xs btn btn-primary">Edit</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="21">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- start: page -->
        <!-- end: page -->
    </section>

{% endblock %}