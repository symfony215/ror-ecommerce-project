{% extends 'homebase.html.twig' %}

{% block title %} {{ app.user.name }} Profile {% endblock %}

{% block body %}

    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active"> {{ app.user.name }} Profile </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Shop Page  -->
    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                    <div class="product-categori">

                        {{ include('user/usermenu.html.twig') }}

                    </div>
                </div>

                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <h1>User Product List</h1>
                        <div class="row product-categorie-box">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                    <div class="row">

                                        <div class="col-md-2">
                                            <a href="{{ path('user_product_new') }}" class="btn btn-block btn-success">Create New</a>

                                        </div><br><br>
                                        <table class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Title</th>
                                                <th>Keywords</th>
                                                <th>Description</th>
                                                <th>Image</th>
                                                <th>Used_year</th>
                                                <th>Purchase_price</th>
                                                <th>Sale_price</th>
                                                <th>Gallery</th>
                                                <th>status</th>
                                                <th>actions</th>

                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for product in products %}
                                                <tr>
                                                    <td>{{ product.id }}</td>
                                                    <td>{{ product.title }}</td>
                                                    <td>{{ product.keywords }}</td>
                                                    <td>{{ product.description }}</td>
                                                    <td><img src="{{ asset('uploads/images/'  ~ product.image) }}" height="40" ></td>
                                                    <td>{{ product.usedYear }}</td>
                                                    <td>{{ product.purchasePrice }}</td>
                                                    <td>{{ product.salePrice }}</td>

                                                    <td>
                                                        <a href="javascript:openWin('{{ path('admin_image_new',{'id':product.id }) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=700');">
                                                            <img src="{{ asset('assets/admin/img') }}/gallery.jpg" height="40">
                                                        </a>
                                                    </td>
                                                    <td>{{ product.status }}</td>
                                                    <td>
                                                        <a href="{{ path('user_product_show', {'id': product.id}) }}"class="btn btn-block btn-info">Show</a>

                                                        <a href="{{ path('user_product_edit', {'id': product.id}) }}"class="btn btn-block btn-info">Edit</a>
                                                        {{ include('admin/product/_delete_form.html.twig') }}
                                                    </td>

                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="14">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>


                                    </div>




                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





{% endblock %}
