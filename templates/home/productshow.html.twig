{% extends 'homebase.html.twig' %}

{% block title %} {{ product.title }}{% endblock %}
{% block keywords %} {{ product.keywords }}{% endblock %}
{% block description %} {{ product.description }}{% endblock %}

{% block body %}

    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Product Detail</a></li>
                        <li class="breadcrumb-item active"> {{ product.title }} </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Shop Detail  -->
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="{{ asset('assets') }}/images/big-img-01.jpg" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="{{ asset('assets') }}/images/big-img-02.jpg" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="{{ asset('assets') }}/images/big-img-03.jpg" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="{{ asset('assets') }}/images/smp-img-01.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="{{ asset('assets') }}/images/smp-img-02.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="{{ asset('assets') }}/images/smp-img-03.jpg" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>

                <!-- End Cart -->
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <table class="table">
                            <tbody>

                            <tr>
                                <th>Title</th>
                                <td>{{ product.title }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ product.description }}</td>
                            </tr>
                            <tr>
                                <th>Used_year</th>
                                <td>{{ product.usedYear }}</td>
                            </tr>
                            <tr>
                                <th>Purchase_price</th>
                                <td>{{ product.purchasePrice }}</td>
                            </tr>
                            <tr>
                                <th>Sale_price</th>
                                <td>{{ product.salePrice }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ product.email }}</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>{{ product.phone }}</td>
                            </tr>
                            <tr>
                                <th>Adress</th>
                                <td>{{ product.adress }}</td>
                            </tr>
                            <tr>
                                <th>

                                    <div class="form-group size-st">
                                        <label class="size-label">Size</label>
                                        <select id="basic" class="selectpicker show-tick form-control">
                                            <option value="0">Standart</option>
                                            <option value="0">S</option>
                                            <option value="1">M</option>
                                            <option value="1">L</option>
                                            <option value="1">XL</option>
                                        </select>
                                    </div>

                                </th>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">Buy New</a>
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">Add to cart</a>
                        </div>
                    </div>
                </div>


                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="single-product-details">
                        </p><h4>Short Description:</h4>
                        <p> {{ product.description }}</p>
                        <ul>
                            <li>
                                <div class="form-group size-st">
                                    <label class="control-label"><h2>Details</h2></label>
                                    <p>{{ product.detail | raw }}</p>
                                </div>
                            </li>
                            <li>
                                <div class="form-group size-st">
                                    <label class="control-label"><h2>Comments</h2></label>
                                    <p>
                                        {% for rs in comments %}
                                    <h5>{{ rs.subject }} [Rate: {{ rs.rate }}] </h5>
                                    <p>
                                        {{ rs.comment }}
                                    </p>
                                    <hr>
                                    {% endfor %}
                                    </p>
                                    {% if app.user %}
                                    <form name="comment" action="{{ path('user_new_comment', {'id': product.id}) }}" method="post" role="form" class="contactForm" >
                                        <div class="row">

                                            {{ include('messages.html.twig') }}

                                            <div class="col-md-12">
                                                <h4>Write Your Comment</h4>
                                                <div class="form-group">
                                                    <input type="text" class="form-control" id="comment_subject" name="comment[subject]" maxlength="75" placeholder="Subject" required data-error="Please enter your Subject">
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <select id="comment_rate" name="comment[rate]" class="form-control">
                                                        <option>1</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <textarea class="form-control" id="comment_comment" name="comment[comment]" maxlength="255" rows="4" data-error="Write your message" required></textarea>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                                <div class="submit-button text-center">

                                                    <input type="hidden" name="token" value="{{ csrf_token('comment') }}" />
                                                    <button class="btn hvr-hover" id="submit" type="submit">Send Comment</button>
                                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                {% else %}
                            <li>
                                <a href="/loginuser"><h5><i class="fa fa-user"></i> If you want to add comment please login </h5></a>
                            </li>
                            {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>





{% endblock %}
